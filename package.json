{
 "name": "turbo-basic-shared",
 "version": "0.0.0",
 "private": true,
 "workspaces": [
  "apps/*"
 ],
 "scripts": {
  "build": "turbo build",
  "dev": "turbo dev ",
  "dev:docker": "docker-compose up -d",
  "lint": "turbo run lint",
  "format": "prettier --write \"**/*.{ts,tsx,md}\""
 },
 "devDependencies": {
  "prettier": "^2.5.1",
  "turbo": "latest"
 },
 "turbo": {
  "pipeline": {
   "build": {
    "dependsOn": [
     "^build"
    ],
    "outputs": [
     "build/**",
     "dist/**",
     ".next/**"
    ]
   },
   "lint": {
    "outputs": []
   },
   "dev": {
    "cache": false
   },
   "develop": {
    "cache": false
   }
  }
 },
 "packageManager": "pnpm@8.9.0",
 "engines": {
  "npm": ">=7.0.0",
  "node": ">=14.0.0"
 }
}
